@using animetflix.Models.DTOs
@model List<SerieDTO>

<h1>Lista de Serie</h1>
<div class="form-group">
    <a asp-controller="Series" asp-action="Create" class="btn btn-info">Agregar Serie</a>
</div>
<hr>
@if (Model.Count() > 0)
{
    @foreach (var serie in Model)
    {
        <h4>@serie.Anio - @serie.Nombre</h4>
        <div style="display: flex;">
            <span style="display: inline-block; margin-left: 5px;"><img src="@serie.PosterUrl" style="width: 225px; height: 315px;"></span>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/@serie.Trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture;" allowfullscreen></iframe>
        </div>
        <div style="margin-top: 10px;">
            <h3>Sinopsis</h3>
            <div>
                <p>@serie.Sinopsis</p>
            </div>
        </div>
        <div>
            <a asp-controller="Series" asp-action="Edit" asp-route-id="@serie.Id">Editar</a> | <a asp-controller="Series" asp-action="Delete" asp-route-id="@serie.Id">Eliminar</a>
        </div>
        <hr>
    }
} else {
    <h3>No existen series para mostrar</h3>
}
